a=int(input('enter an odd number: '))
while True:
    if a%2==1:
        for i in range(1,a+1,2):
            print(' '*int(((a-i)/2)),'*'*i,' '*(a-i),'*'*i,sep='')
        for i in range(a-2,0,-2):
            print(' '*int(((a-i)/2)),'*'*i,' '*(a-i),'*'*i,sep='')
        break
    else:
        print('the number is not odd')
        a=int(input('choose again: '))
